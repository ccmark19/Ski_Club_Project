    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Appointment</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Schedule ID
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.scheduleId)
        </dd>
        <dt class = "col-sm-2">
            Member Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.applicationUserName)
