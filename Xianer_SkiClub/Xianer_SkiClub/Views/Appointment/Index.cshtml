@model IEnumerable<Xianer_SkiClub.Models.Appointment>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Schedule ID
            </th>
            <th>
                User Name
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a asp-action="Details" asp-controller="Schedule" asp-route-id="@item.scheduleId">@Html.DisplayFor(modelItem => item.scheduleId)</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.applicationUserName)
            </td>            
            <td>
                <a asp-action="Edit" asp-route-id="@item.appointmentId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.appointmentId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.appointmentId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
