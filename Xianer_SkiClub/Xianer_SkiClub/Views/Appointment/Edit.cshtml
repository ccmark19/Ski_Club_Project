@model Xianer_SkiClub.Models.Appointment

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Appointment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="appointmentId" />
            <div class="form-group">
                <label asp-for="scheduleId" class="control-label">Schedule ID</label>
                <select asp-for="scheduleId" class="form-control" asp-items="ViewBag.scheduleList"></select>
                <span asp-validation-for="scheduleId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="applicationUserName" class="control-label"></label>
                <input asp-for="applicationUserName" value="@ViewBag.applicationUserName" class="form-control" readonly/>
                <span asp-validation-for="applicationUserName" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="applicationUserId" class="control-label"></label>
                <input asp-for="applicationUserId" class="form-control" />
                <span asp-validation-for="applicationUserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
